<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,700" rel="stylesheet">
        <link rel="stylesheet" href="/css/form.css">
        <title></title>
    </head>
    <body>
      <div class="container">
          <div class="update-thing">
            <h1>New Activity</h1>
            <form action="/things" method="POST">
                <select id="weather" name="weather">
                  <option value="Sunny">Sunny</option>
                  <option value="Rainy">Rainy</option>
                  <option value="Hot">Hot</option>
                  <option value="Cold">Cold</option>
                  <option value="Snowy">Snowy</option>
                </select><br></br>
                <input type="text" id="name" name="name" placeholder="Activity Name" /><br></br>
                <textarea name="description" value="" id="description" placeholder="Type Activity Description"></textarea><br></br>
                <input type="text" id="image" name="img" placeholder="Enter Image URL"/><br></br>

                <input type="submit" name="" value="Submit"/>
          </form>
      </div>
    </div>
  </body>
</html>
